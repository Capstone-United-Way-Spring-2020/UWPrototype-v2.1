@model UnitedWayPrototypeApplication.Models.AgencyModel

<h3>Are you sure you want to delete this? Any contributions connected to this agency will be set to "No Agency"</h3>

@{
    var agency = ViewData["Agency"] as UnitedWayPrototypeApplication.Models.AgencyModel;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.AgencyID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AgencyID, new { htmlAttributes = new { @class = "form-control", @readonly = true, @Value = agency.AgencyID } })
                @Html.ValidationMessageFor(model => model.AgencyID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AgencyName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AgencyName, new { htmlAttributes = new { @class = "form-control", @readonly = true, @Value = agency.AgencyName } })
                @Html.ValidationMessageFor(model => model.AgencyName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Delete" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Agency")
</div>
